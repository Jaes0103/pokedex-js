<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("../partials/header") %>
  <style>
    body {
      background: linear-gradient(145deg, #f5f5f5, #e3e3e3);
      font-family: 'Orbitron', sans-serif;
    }
    h1 {
      background: linear-gradient(145deg, #FF6F61, #B22222);
      color: white;
      padding: 20px;
      border-radius: 15px;
      text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.4);
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }
    input[type="text"] {
      width: 100%;
      max-width: 300px;
      background-color: #f8f8f8;
      color: #333;
      border: 2px solid #ccc;
      padding: 10px;
      border-radius: 10px 0 0 10px;
    }

    button {
      background: #FF6F61;
      border: none;
      padding: 10px 15px;
      color: white;
      font-weight: bold;
      border-radius: 0 10px 10px 0;
      cursor: pointer;
      transition: background 0.3s;
    }

    button:hover {
      background: #B22222;
    }
    .pokemon-card {
      padding: 20px;
      background: white;
      border-radius: 20px;
      box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.15);
      transition: transform 0.3s, box-shadow 0.3s;
      text-transform: capitalize;
      text-align: center;
      font-weight: bold;
    }

    .pokemon-card:hover {
      transform: translateY(-10px);
      box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.25);
    }

    a {
      text-decoration: none;
      color: inherit;
    }
  </style>
</head>
<body class="bg-gray-100 text-gray-800">
  <div class="container mx-auto p-5">
    <!-- Header -->
    <h1 class="text-3xl font-bold text-center mb-5">Pok√©dex</h1>

    <!-- üîç Search Form -->
    <form action="/search" method="GET" class="flex justify-center mb-5">
      <input type="text" name="name" placeholder="Search Pok√©mon..." class="px-4 py-2 border rounded-l-lg focus:outline-none">
      <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-r-lg">Search</button>
    </form>

    <!-- Pok√©mon List -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      <% pokemonList.forEach(pokemon => { %>
        <a href="/pokemon/<%= pokemon.name %>" class="pokemon-card">
          <p class="text-xl capitalize font-semibold"><%= pokemon.name %></p>
        </a>
      <% }); %>
    </div>
  </div>
  <%- include("../partials/footer") %>
</body>
</html>
